@page
@model App.Qtech.Web.Areas.Admin.Pages.RoleModuleAccess.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create RoleModuleAccess</h1>

<hr />
<div class="bg-info">
    <h3 class="text-danger">@TempData["ErrorMessage"]</h3>
</div>
<div class="bg-info">
    <h3 class="text-success">@TempData["SuccessMessage"]</h3>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleModuleAccess.RoleName" class="control-label"></label>
                <select asp-for="RoleModuleAccess.RoleName" class="form-control">
                    <option value="">-- Select Role --</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role">@role</option>
                    })
                </select>
                <span asp-validation-for="RoleModuleAccess.RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleModuleAccess.ModuleName" class="control-label"></label>
                <select asp-for="RoleModuleAccess.ModuleName" class="form-control">
                    <option value="">-- Select Module --</option>
                    @foreach (var module in Model.Modules)
                    {
                        <option value="@module">@module</option>
                    })
                </select>
                <span asp-validation-for="RoleModuleAccess.ModuleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoleModuleAccess.Operation" class="control-label"></label>
                <select asp-for="RoleModuleAccess.Operation" class="form-control">
                    <option value="">-- Select Operation --</option>
                    @foreach (var operation in Model.Operations)
                    {
                        <option value="@operation">@operation</option>
                    })
                </select>
                <span asp-validation-for="RoleModuleAccess.Operation" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RoleModuleAccess.HasAccess" /> @Html.DisplayNameFor(model => model.RoleModuleAccess.HasAccess)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
