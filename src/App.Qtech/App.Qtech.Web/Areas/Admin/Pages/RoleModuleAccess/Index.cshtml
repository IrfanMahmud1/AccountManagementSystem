@page
@model App.Qtech.Web.Areas.Admin.Pages.RoleModuleAccess.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Role Module Access List</h1>

<div class="bg-info">
    <h3 class="text-danger">@TempData["ErrorMessage"]</h3>
</div>
<div class="bg-info">
    <h3 class="text-success">@TempData["SuccessMessage"]</h3>
</div>
<p class="text-end">
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleModuleAccess[0].RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleModuleAccess[0].ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleModuleAccess[0].HasAccess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleModuleAccess[0].Operation)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RoleModuleAccess) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAccess)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operation)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
