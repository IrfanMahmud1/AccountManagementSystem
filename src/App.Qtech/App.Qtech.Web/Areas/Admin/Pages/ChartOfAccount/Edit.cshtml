@page
@model App.Qtech.Web.Areas.Admin.Pages.ChartOfAccount.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit ChartOfAccount</h1>
<hr />
<div class="bg-info">
    <h3 class="text-danger">@TempData["ErrorMessage"]</h3>
</div>
<div class="bg-info">
    <h3 class="text-success">@TempData["SuccessMessage"]</h3>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="bg-info">
            <h3 class="text-danger">@TempData["ErrorMessage"]</h3>
        </div>
        <div class="bg-info">
            <h3 class="text-success">@TempData["SuccessMessage"]</h3>
        </div>
        <form asp-antiforgery=true method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChartOfAccount.Id" />
            <div class="form-group">
                <label asp-for="ChartOfAccount.Name" class="control-label"></label>
                <input asp-for="ChartOfAccount.Name" class="form-control" />
                <span asp-validation-for="ChartOfAccount.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChartOfAccount.AccountType" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="ChartOfAccount.AccountType" value="Cash" /> Cash
                    <input type="radio" asp-for="ChartOfAccount.AccountType" value="Bank" /> Bank
                    <input type="radio" asp-for="ChartOfAccount.AccountType" value="Receivable" /> Receivable
                </div>
                <span asp-validation-for="ChartOfAccount.AccountType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChartOfAccount.ParentId" class="control-label"></label>
                <select asp-for="ChartOfAccount.ParentId" class="form-control">
                    <option value="">-- Select Parent Account --</option>
                    @foreach (var account in Model.ParentAccounts)
                    {
                        <option value="@account.Id">@account.Name</option>
                    })
                </select>
                <span asp-validation-for="ChartOfAccount.ParentId" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="ChartOfAccount.IsActive" />
                <label class="form-check-label" asp-for="ChartOfAccount.IsActive"></label>
                <span asp-validation-for="ChartOfAccount.IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
